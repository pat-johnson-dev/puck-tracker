    "postcss": "^8.5.6",
    "prettier": "^3.7.4",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "tailwindcss": "^4.1.17",
    "typescript": "^5.3.0",
    "typescript-eslint": "^8.49.0"
  },
  "dependencies": {
    "@kobalte/core": "^0.13.11",
    "@kobalte/utils": "^0.9.1",
    "@solidjs/router": "^0.15.4",
