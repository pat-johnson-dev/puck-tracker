  "type": "module",
  "scripts": {
    "dev": "pnpm --filter web dev",
    "build": "pnpm --filter web build",
    "lint": "eslint apps/web/src --fix",
    "format": "prettier --write 'apps/web/src/**/*.{ts,tsx,css,json}'",
